%copyright%
import (
  "ps";
  "util";
  "fancy";
  "strm";
  "fmt";
)

type DicT struct {
  Defs map[string][]byte;
  Name []byte;
}

type TypeOneI struct {
  St util.Stack;
  DicSt [1024]*DicT;
  DicSp int;
  Dicts [1024]*DicT;
  DicNo int;
  Marker int;
  Args [][]byte;
  Done bool;
}

func NewInterpreter() *TypeOneI {
  r := new(TypeOneI);
  r.St = util.NewStack(1024);
  r.Done = false;
  return r;
}

func (t *TypeOneI) NewDic() (r []byte) {
  rs := fmt.Sprintf("D%d", t.DicNo);
  r = util.Bytes(rs);
  t.Dicts[t.DicNo] = new(DicT);
  t.Dicts[t.DicNo].Defs = make(map[string][]byte);
  t.Dicts[t.DicNo].Name = r;
  t.DicNo++;
  return;
}

%%
1 dict           -
  +    t.St.Push(t.NewDic());
  +    _ = a;
1 begin          -
  +    if a[0] != 'D' { panic("Wrong dictionary!\n") }
  +    t.DicSp++;
  +    t.DicSt[t.DicSp] = t.Dicts[strm.Int(string(a[1:]), 1)];
0 end            -
  +    t.DicSp--;
1 dup            -
  +    t.St.Push(a);
  +    t.St.Push(a);
1 pop            -
2 exch           -
  +    t.St.Push(a[1]);
  +    t.St.Push(a[0]);
2 def            -
  +    t.DicSt[t.DicSp].Defs[string(a[0])] = a[1];
0 currentdict    -
  +    t.St.Push(t.DicSt[t.DicSp].Name);
3 defineresource -
  +    t.St.Push([]byte{'?'});
  +    _ = a;
2 findresource   -
  +    t.St.Push([]byte{'?'});
  +    _ = a;
0 currentfile   -
  +    t.St.Push([]byte{'?'});
0 readonly       -
0 noaccess       -
3 put            -
  +    if a[0][0] == 'D' {
  +      t.Dicts[strm.Int(string(a[0][1:]), 1)].Defs[string(a[1])] = a[2];
  +    } else if a[0][0] == 'A' {
  +    } else { panic("Wrong dictionary or array!\n") }
1 eexec          -
  +    t.Done = true; // NONSENSE
  +    _ = a;
%%

func Read(rdr fancy.Reader) (r *TypeOneI) {
  r = NewInterpreter();
  for !r.Done {
    t, _ := ps.Token(rdr);
    if len(t) == 0 {
      break
    }
    if f, ok := Ops[string(t)]; ok {
      f(r)
    } else {
      r.St.Push(t)
    }
  }
  return;
}
